    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year- cpc直得科技股份有限公司 CHIEFTEK PRECISION CO., LTD. </p>
        </footer>
    </div>


    @RenderSection("scripts", required: false)
</body>
</html>
